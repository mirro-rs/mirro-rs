{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "clap"
      ],
      "groupName": "clap"
    },
    {
      "matchPackagePatterns": [
        "tracing"
      ],
      "groupName": "tracing",
      "automerge": true
    },
    {
      "groupName": "tokio",
      "automerge": true,
      "matchPackagePatterns": [
        "tokio"
      ],
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "groupName": "tui",
      "matchPackagePatterns": [
        "ratatui",
        "tui-logger"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
